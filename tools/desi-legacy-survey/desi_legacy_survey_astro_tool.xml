<tool id="desi_legacy_survey_astro_tool" name="DESI Legacy Survey" version="0.0.1+galaxy0" profile="23.0">
  <requirements>
    <requirement type="package" version="6.1.6">astropy</requirement>
    <requirement type="package" version="3.9.2">matplotlib</requirement>
    <requirement type="package" version="1.21.4">wget</requirement>
    <requirement type="package" version="1.2.27">oda-api</requirement>
    <requirement type="package" version="7.16.4">nbconvert</requirement>
    <requirement type="package" version="0.4.7">astroquery</requirement>
    <requirement type="package" version="8.29.0">ipython</requirement>
    <!--Requirements string 'nb2workflow>=1.3.30' can't be converted automatically. Please add the galaxy/conda requirement manually or modify the requirements file!-->
  </requirements>
  <command detect_errors="exit_code">ipython '$__tool_directory__/${_data_product._selector}.py'</command>
  <configfiles>
    <inputs name="inputs" filename="inputs.json" data_style="paths" />
  </configfiles>
  <inputs>
    <conditional name="_data_product">
      <param name="_selector" type="select" label="Data Product">
        <option value="Image" selected="true">Image</option>
        <option value="Catalog" selected="false">Catalog</option>
      </param>
      <when value="Image">
        <param name="src_name" type="text" value="Mrk 421" label="src_name" />
        <param name="RA" type="float" value="166.113808" label="RA (unit: deg)" />
        <param name="DEC" type="float" value="38.208833" label="DEC (unit: deg)" />
        <param name="Radius" type="float" value="3" label="Radius (unit: arcmin)" />
        <param name="pixsize" type="float" value="1.0" label="Pixel size (unit: arcsec)" />
        <param name="band" type="select" label="band">
          <option value="g" selected="true">g</option>
          <option value="i">i</option>
          <option value="r">r</option>
          <option value="z">z</option>
        </param>
        <param name="data_release" type="integer" value="9" label="data_release" />
      </when>
      <when value="Catalog">
        <param name="src_name" type="text" value="Mrk 421" label="src_name" />
        <param name="RA" type="float" value="166.113808" label="RA (unit: deg)" />
        <param name="DEC" type="float" value="38.208833" label="DEC (unit: deg)" />
        <param name="Radius" type="float" value="1" label="Radius (unit: arcmin)" />
        <param name="data_release" type="integer" value="9" label="data_release" />
      </when>
    </conditional>
  </inputs>
  <outputs>
    <data label="${tool.name} -&gt; Image picture" name="out_Image_picture" format="auto" from_work_dir="picture_galaxy.output">
      <filter>_data_product['_selector'] == 'Image'</filter>
    </data>
    <data label="${tool.name} -&gt; Catalog catalog_table" name="out_Catalog_catalog_table" format="auto" from_work_dir="catalog_table_galaxy.output">
      <filter>_data_product['_selector'] == 'Catalog'</filter>
    </data>
  </outputs>
  <tests>
    <test expect_num_outputs="1">
      <conditional name="_data_product">
        <param name="_selector" value="Image" />
        <param name="src_name" value="Mrk 421" />
        <param name="RA" value="166.113808" />
        <param name="DEC" value="38.208833" />
        <param name="Radius" value="3" />
        <param name="pixsize" value="1.0" />
        <param name="band" value="g" />
        <param name="data_release" value="9" />
      </conditional>
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
    <test expect_num_outputs="1">
      <conditional name="_data_product">
        <param name="_selector" value="Catalog" />
        <param name="src_name" value="Mrk 421" />
        <param name="RA" value="166.113808" />
        <param name="DEC" value="38.208833" />
        <param name="Radius" value="1" />
        <param name="data_release" value="9" />
      </conditional>
      <assert_stdout>
        <has_text text="*** Job finished successfully ***" />
      </assert_stdout>
    </test>
  </tests>
  <help>And here, the help text for the galaxy tool goes.
</help>
</tool>